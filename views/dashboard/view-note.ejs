<div class="container-fluid container-fluid-custom pb-5 mb-5">
  <div class="row mb-4">
    <div class="col">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item active">
            <a href="/dashboard">Dashboard</a>
          </li>
          <li class="breadcrumb-item"><%=note.title%></li>
        </ol>
      </nav>
    </div>
  </div>
  <div class="row">
    <div class="col d-flex justify-content-between align-items-center">
      <h1 class="h3">View Note</h1>
      <button
        class="btn btn-danger me-2"
        data-bs-toggle="modal"
        id="deleteButton"
        data-bs-target="#deleteModal"
      >
        Delete
      </button>
    </div>
  </div>
  <div class="modal fade" tabindex="-1" id="deleteModal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">You are about to delete note</h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <p>
            This will delete your note <b class="fw-bold"><%= note.title %></b>
            <br />

            Are you sure?
          </p>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Cancel
          </button>
          <form
            action="/dashboard/item/<%=noteId%>?_method=DELETE"
            method="post"
          >
            <button type="submit" class="btn btn-primary">Delete Note</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <form
    action="/dashboard/item/<%=noteId%>?_method=PUT"
    method="post"
    class="position-relative"
  >
    <br />
    <div
      class="form-group mb-4 position-absolute"
      style="left: -1px; right: 1px; top: 1px"
    >
      <input
        type="text"
        class="form-control fw-bold fs-4 border-0"
        id="title"
        name="title"
        value="<%=note.title%>"
        placeholder="title"
      />
    </div>
    <div class="form-group mb-4">
      <textarea
        class="form-control pt-5 fs-4"
        name="body"
        id="body"
        rows="12"
        placeholder="Take a note..."
      >
<%=note.body%></textarea
      >
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary btn-lg">Update</button>
    </div>
  </form>
</div>
